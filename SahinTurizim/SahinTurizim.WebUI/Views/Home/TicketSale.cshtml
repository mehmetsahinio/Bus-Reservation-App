@model Expedition

<h5 class="mt-5">Sefer</h5>
<h5 class="mt-5 d-flex justify-content-center align-items-center">Sefer</h5>
<div class="card mb-3 shadow">

    <div class="card-title pl-3 pt-3">
        <h1>@Model.StartTerminal- @Model.EndTerminal</h1>
    </div>
    <div class="card-body">
        <form asp-controller="Home" asp-action="TicketSales" method="post">
            <div class="row no-gutters">

                <div class="col-md-8">
                    <h4>@Model.StartTerminal > @Model.EndTerminal OTOBÜSÜ</h4>
                    <p><b>Route: </b> @Model.StartTerminal > @Model.FirstTerminal > @Model.SecondTerminal > @Model.ThirdTerminal > @Model.EndTerminal</p>
                    <p>@Model.Date  -  @Model.Hour</p>
                    <br />
                    <p>Dolu koltuk sayısı: @ViewBag.seatNumbers</p>

                </div>

                <div class="row no-gutters">

                    <div class="col-md-12">
                        <br /><br /><hr /><br />
                        <div class="form-group">
                            <input type="text" name="firstName" class="form-control  mb-3" id="" aria-describedby="" placeholder="Name" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="lastName" class="form-control  mb-3" id="" aria-describedby="" placeholder="Surname" required>
                        </div>
                        <div class="form-group">
                            <input type="tel" name="PhoneNumber" class="form-control  mb-3" id="" aria-describedby="" placeholder="Phone" required>
                        </div>
                        <div class="form-group">
                            <select name="SeatNumber" class="form-select mb-3" asp-items="@ViewBag.SeatNumbers" required="required">
                                <option selected disabled>Koltuk Seçiniz</option>
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-danger w-25 offset-8">Book Ticket</button>
                    <br />
                </div><br />
            </div>

        </form>

    </div><br />

</div>
<br />